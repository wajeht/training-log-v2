<section class="px-4 py-5">
  <div class="container">
    <div class="row gy-3 position-relative">
      <!--  contact-form -->
      <!--  signin-form -->
      <div class="mx-sm-auto mx-md-auto mx-lg-auto">
        <div class="card shadow-sm">
          <div class="card-body">
            <form id="signinFormFromSinglePage" action="/contact" method="post">
              <!-- text -->
              <div class="mb-4">
                <h4>Contact</h4>
                <p>Have any question?</p>
              </div>

              <!-- name -->
              <div class="form-floating mb-3">
                <input
                  name="name"
                  type="text"
                  class="form-control"
                  id="floatingInput"
                  placeholder="Name"
                  required
                />
                <label for="floatingInput">Name</label>
              </div>

              <!-- email  -->
              <div class="form-floating mb-3">
                <input
                  name="email"
                  type="email"
                  class="form-control"
                  id="floatingInput"
                  placeholder="name@example.com"
                  required
                />
                <label for="floatingInput">Email address</label>
              </div>

              <!-- message -->
              <div class="form-floating mb-3">
                <textarea
                  class="form-control"
                  placeholder="Leave a comment here"
                  name="message"
                  id="message"
                  style="height: 150px"
                ></textarea>
                <label for="floatingTextarea2">Message</label>
              </div>
              <div>
                <input
                  type="hidden"
                  id="csrfToken"
                  name="_csrf"
                  value="<%= csrfToken %>"
                />
                <!-- button -->
                <button
                  id="signinButtonFromSinglePage"
                  class="w-100 btn btn-lg btn-dark"
                  type="submit"
                >
                  Send
                </button>
              </div>

              <hr class="my-4" />
              <small class="text-muted"
                >For emergencies, call us at
                <a href="tel:18063188390">(806) 318-8390</a></small
              >
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
