<!-- spinner -->
<%- include('../partials/spinner.ejs') %>

<section class="px-4 py-5 border-top">
  <div class="container">
    <div class="row g-3">
      <!-- videos -->
      <% for (const video of videos) { %>

      <!-- single video -->
      <div class="col-6 col-sm-4 col-lg-3">
        <div
          class="card shadow-sm animate__animated animate__fadeIn"
          data-aos="zoom-in"
        >
          <!-- profile image, username and share -->
          <div
            class="card-body d-flex justify-content-between align-items-center"
          >
            <a
              class="
                d-flex
                gap-2
                justify-content-center
                align-items-center
                text-decoration-none
                link-dark
              "
              href="/users/<%= video.username %>"
            >
              <img
                src="<%= video.profile_picture_url %>"
                alt="mdo"
                width="30"
                height="30"
                class="rounded-circle"
              />
              <h6 class="card-title"><%= video.username %></h6>
            </a>

            <a href="/" class="link-dark"><i class="bi bi-three-dots"></i></a>
          </div>

          <!-- screenshot -->
          <a href="/videos/<%= video.id  %> ">
            <img
              src="<%= video.screenshot_url %>"
              class="card-img-top"
              alt="..."
            />
          </a>

          <!-- post below -->
          <div
            class="card-body d-flex justify-content-between align-items-center"
          >
            <!-- post title -->
            <a
              href="/videos/<%= video.id %>"
              class="text-decoration-none link-dark"
            >
              <h6><%= video.title %></h6>
            </a>

            <!-- comment -->
            <a
              href="/videos/<%= video.id  %>#comment_section"
              class="link-dark"
            >
              <i class="bi bi-chat"></i>
            </a>
          </div>
        </div>
      </div>

      <% } %>
    </div>
  </div>
</section>

<%- include('../partials/auth/pagination.ejs') %>
