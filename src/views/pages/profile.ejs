<!-- spinner -->
<%- include('../partials/spinner.ejs') %>

<!-- delete confirmation modal -->
<%- include("../partials/auth/delete-confirmation-modal.ejs") %>

<section class="px-4 py-5">
  <div class="container">
    <div class="row g-3">
      <!-- user details -->
      <div class="col-12">
        <!-- profile -->
        <div class="row" style="width: 100%">
          <div class="col-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <img
                  class="img-fluid img-thumbnail rounded-circle"
                  src="<%= userDetails.userInfo.profile_picture_url%>"
                  alt=""
                />
                <h5 class="card-title"><%= userDetails.userInfo.username %></h5>
                <p class="card-text">
                  Lorem ipsum dolor sit amet consectetur, adipisicing elit.
                  Quaerat atque qui magni minus cum, velit excepturi.
                  Voluptatibus veniam minima assumenda. Odio commodi excepturi
                  sunt, quo facilis quis unde ratione quod.
                </p>
              </div>
            </div>
          </div>

          <!-- details -->
          <div class="col-8">
            <div class="card shadow-sm">
              <div class="card-body">
                <h4 class="card-title">lorem</h4>
                <p class="card-text">
                  Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                  Repellat, quaerat! Optio, delectus earum odio, hic dignissimos
                  quaerat ea magni pariatur iste harum doloremque fugit impedit,
                  ratione maiores quibusdam in? Deserunt.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- user video collection -->
      <div
        class="d-grid"
        style="
          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
          grid-gap: 12px;
        "
      >
        <% for (const video of userDetails.userVideos ){ %>
        <div id="video-card<%= video.id %>" class="card shadow-sm">
          <div
            class="card-body d-flex justify-content-between align-items-center"
          >
            <!-- profile -->
            <a
              class="
                d-flex
                gap-2
                justify-content-center
                align-items-center
                text-decoration-none
                link-dark
              "
              href="/users/<%= video.username %>"
            >
              <img
                src="<%= video.profile_picture_url %>"
                alt="mdo"
                width="30"
                height="30"
                class="rounded-circle"
              />
              <h6 class="card-title" style="margin-bottom: -1px">
                <%= video.username %>
              </h6>
            </a>

            <!-- menu -->
            <div class="dropdown">
              <a
                role="button"
                class="btn link-dark dropdown"
                id="deleteVideo"
                data-toggle="dropdown"
                data-bs-toggle="dropdown"
                aria-expanded="false"
                style="padding: 0px"
              >
                <i class="bi bi-three-dots"></i>
              </a>
              <ul
                class="dropdown-menu dropdown-menu-end shadow-sm"
                aria-labelledby="deleteVideo"
              >
                <% if ( user.id == video.user_id) { %>
                <li><a class="dropdown-item" href="#">Edit</a></li>
                <% } %>
                <li><a class="dropdown-item" href="#">Share</a></li>
                <% if ( user.id == video.user_id) { %>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <input
                    type="hidden"
                    name="userId"
                    id="userIdOnProfile<%= video.user_id %>"
                    value="<%= video.user_id %>"
                  />
                  <input
                    type="hidden"
                    id="videoIdOnProfile<%= video.id %> "
                    value="<%= video.id %>"
                    name="videoId"
                  />
                  <a
                    class="dropdown-item"
                    onclick="setVideoIdLocalStorage(this)"
                    href="#"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteConfirmation"
                    >Delete</a
                  >
                </li>
                <% } %>
              </ul>
            </div>
          </div>
          <a href="/videos/<%= video.id  %> ">
            <img
              src="<%= video.screenshot_url %>"
              class="card-img-top"
              alt="..."
            />
          </a>

          <!-- post below -->
          <div
            class="card-body d-flex justify-content-between align-items-center"
          >
            <!-- post title -->
            <a
              href="/videos/<%= video.id %>"
              class="text-decoration-none link-dark"
              style="margin-bottom: -11px"
            >
              <h6 class="d-inline-block text-truncate" style="max-width: 150px">
                <%= video.title %>
              </h6>
            </a>

            <!-- comment -->
            <a
              href="/videos/<%= video.id  %>#comment_section"
              class="link-dark"
            >
              <i class="bi bi-chat"></i>
            </a>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</section>
