<!-- spinner -->
<%- include('../partials/spinner.ejs') %>

<section class="px-4 py-5">
  <div class="container">
    <div class="row g-3">
      <!-- user details -->
      <div class="col-12">
        <!-- profile -->
        <div class="row" style="width: 100%">
          <div class="col-4">
            <div class="card">
              <div class="card-body">
                <img
                  class="img-fluid img-thumbnail rounded-circle"
                  src="<%= userDetails.userInfo.profile_picture_url%>"
                  alt=""
                />
                <h5 class="card-title"><%= userDetails.userInfo.username %></h5>
                <p class="card-text">
                  Lorem ipsum dolor sit amet consectetur, adipisicing elit.
                  Quaerat atque qui magni minus cum, velit excepturi.
                  Voluptatibus veniam minima assumenda. Odio commodi excepturi
                  sunt, quo facilis quis unde ratione quod.
                </p>
              </div>
            </div>
          </div>

          <!-- details -->
          <div class="col-8">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">lorem</h4>
                <p class="card-text">
                  Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                  Repellat, quaerat! Optio, delectus earum odio, hic dignissimos
                  quaerat ea magni pariatur iste harum doloremque fugit impedit,
                  ratione maiores quibusdam in? Deserunt.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- user video collection -->
      <% for (const user of userDetails.userVideos ){ %>
      <div class="col-6 col-sm-4 col-lg-3">
        <div
          class="card shadow-sm animate__animated animate__zoomIn animate__fast"
        >
          <div
            class="card-body d-flex justify-content-between align-items-center"
          >
            <!-- profile -->
            <a
              class="
                d-flex
                gap-2
                justify-content-center
                align-items-center
                text-decoration-none
                link-dark
              "
              href="/users/<%= user.username %>"
            >
              <img
                src="<%= user.profile_picture_url %>"
                alt="mdo"
                width="30"
                height="30"
                class="rounded-circle"
              />
              <h6 class="card-title" style="margin-bottom: -1px">
                <%= user.username %>
              </h6>
            </a>

            <!-- menu -->
            <div class="dropdown" style="margin-left: 74px">
              <a
                role="button"
                class="btn link-dark dropdown"
                id="deleteVideo"
                data-toggle="dropdown"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <i class="bi bi-three-dots"></i>
              </a>
              <ul
                class="dropdown-menu dropdown-menu-end"
                aria-labelledby="deleteVideo"
              >
                <li><a class="dropdown-item" href="#">Edit</a></li>
                <li><a class="dropdown-item" href="#">Share</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="#">Delete</a></li>
              </ul>
            </div>
          </div>
          <a href="/videos/<%= user.id  %> ">
            <img
              src="<%= user.screenshot_url %>"
              class="card-img-top"
              alt="..."
            />
          </a>

          <!-- post below -->
          <div
            class="card-body d-flex justify-content-between align-items-center"
          >
            <!-- post title -->
            <a
              href="/videos/<%= user.id %>"
              class="text-decoration-none link-dark"
              style="margin-bottom: -11px"
            >
              <h6 class="d-inline-block text-truncate" style="max-width: 150px">
                <%= user.title %>
              </h6>
            </a>

            <!-- comment -->
            <a href="/videos/<%= user.id  %>#comment_section" class="link-dark">
              <i class="bi bi-chat"></i>
            </a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
