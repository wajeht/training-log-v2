<!-- spinner -->
<%- include('../../partials/spinner.ejs') %>

<section class="px-4 py-5 border-top">
  <div class="container">
    <div class="row g-3">
      <div
        class="d-grid"
        style="
          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
          grid-gap: 12px;
        "
      >
        <!-- videos -->
        <% for (const user of users) { %>
        <div class="card shadow-sm mb-3">
          <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-sm-12 ">
              <div
                class="
                  card-body
                  d-flex
                  justify-content-center
                  align-items-center
                "
              >
              <a href="/users/<%= user.username %>">
                <img
                  class="img-thumbnail shadow-sm card-img-top"
                  style="
                    width: 200px;
                    height: 200px;
                    object-fit: cover;
                    border-radius: 50%;
                  "
                  src="<%= user.profile_picture_url%>"
                  alt=""
                />
              </a>
              </div>
            </div>

            <div class="col-10 col-lg-10">
              <div class="card-body">
                <h5 class="card-title text-center"><%= user.username %></h5>
                <%  if ((!user.biography || user.biography.split("").length < 1) && (locals.user.id == user.id)) { %>
                  <p>Please update your bio via settings!</p>
                <% } else if (!user.biography || user.biography.split("").length < 1) { %>
                  <p>Please login to update your bio!</p>
                <% } else { %>
                  <p><%= user.biography %></p>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</section>
