<div id="recent-video" class="col-lg-3 col-sm-12 position-absolute end-0 me-2">
  <div class="ms-0">
    <% for (const video of recentVideos) { %>

    <!-- single video  -->
    <div class="card shadow-sm mb-3 animate__animated animate__fadeIn">
      <!-- profile image, username and share -->
      <div class="card-body d-flex justify-content-between align-items-center">
        <a
          class="
            d-flex
            gap-2
            justify-content-center
            align-items-center
            text-decoration-none
            link-dark
          "
          href="/users/<%= video.username %>"
        >
          <img
            src="<%= video.profile_picture_url %>"
            alt="mdo"
            width="30"
            height="30"
            class="rounded-circle"
          />
          <h6 class="card-title"><%= video.username %></h6>
        </a>

        <a href="/" class="link-dark"><i class="bi bi-three-dots"></i></a>
      </div>

      <!-- screenshot -->
      <a href="/videos/<%= video.id  %> ">
        <img src="<%= video.screenshot_url %>" class="card-img-top" alt="..." />
      </a>

      <!-- post below -->
      <div class="card-body d-flex justify-content-between align-items-center">
        <!-- post title -->
        <a
          href="/videos/<%= video.id %>"
          class="text-decoration-none link-dark"
        >
          <h6><%= video.title %></h6>
        </a>

        <!-- comment -->
        <a href="/videos/<%= video.id  %>#comment_section" class="link-dark">
          <i class="bi bi-chat"></i>
        </a>
      </div>
    </div>

    <% } %>
  </div>
</div>
