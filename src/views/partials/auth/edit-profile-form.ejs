<!-- edit profile -->
<div
  class="tab-pane fade show active"
  id="list-edit-profile"
  role="tabpanel"
  aria-labelledby="list-home-list"
>
  <!-- edit profile form -->
  <div class="card shadow-sm mb-3">
    <div class="card-body">
      <h5 class="card-title mb-3">Edit profile</h5>

      <!-- profile picture upload -->
      <!-- <div
        class="
          mb-3
