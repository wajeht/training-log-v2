<div
  class="tab-pane fade show active card shadow-sm"
  id="list-users"
  role="tabpanel"
  aria-labelledby="list-users-list"
>
  <div id="users-table" class="card-body" v-cloak>
    <h5 class="card-title mb-3">Users</h5>
    <table id="myTable" class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Users</th>
          <th scope="col">Email</th>
          <th scope="col">Role</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr v-for="(user, index) in users" :key="user.id">
          <th scope="row">{{ index + 1 }}</th>
          <td class="d-flex">
            <img
              width="27"
              height="27"
              class="rounded-circle me-1"
              :src="user.profile_picture_url"
            />
            <p>{{ user.name }}</p>
          </td>
          <td>{{ user.email }}</td>
          <td v-if="user.is_client">client</td>
          <td v-else-if="user.is_admin">admin</td>
          <td v-else></td>
          <td>
            <a class="btn btn-sm btn-warning me-1" href="#">Edit</a>
            <a class="btn btn-sm btn-danger" href="#">Delete</a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<script>
  const app = Vue.createApp({
    data() {
      return {
        users: [],
      };
    },
    async created() {
      const res = await fetch("/users.json");
      const data = await res.json();
      this.users = data;
    },
  });
  app.mount("#users-table");
</script>
