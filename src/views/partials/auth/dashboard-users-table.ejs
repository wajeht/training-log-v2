<div
  class="tab-pane fade show active"
  id="list-users"
  role="tabpanel"
  aria-labelledby="list-users-list"
>
  <!-- table -->
  <div
    v-if="!isEdit"
    class="
      card
      shadow-sm
      mb-3
      animate__animated animate__fadeIn animate__faster
    "
    v-cloak
  >
    <div class="card-body">
      <h5 class="card-title mb-3">Users</h5>
      <table id="myTable" class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Users</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr v-for="user in users" :key="user.id">
            <th scope="row">{{ user.id }}</th>
            <td class="d-flex">
              <img
                width="27"
                height="27"
                class="rounded-circle me-1"
                :src="user.profile_picture_url"
              />
              <p>{{ user.name }}</p>
            </td>
            <td>{{ user.email }}</td>
            <td v-if="user.is_client">client</td>
            <td v-else-if="user.is_admin">admin</td>
            <td v-else>n/a</td>
            <td>
              <a
                @click="handleEdit(user.id)"
                class="btn btn-sm btn-warning me-1"
                href="#"
                >Edit</a
              >
              <a class="btn btn-sm btn-danger" href="#">Delete</a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- update or delete -->
  <div
    v-else
    class="
      card
      shadow-sm
      mb-3
      animate__animated animate__fadeIn animate__faster
    "
    v-cloak
  >
    <div class="card-body">
      <h5 class="card-title mb-3">Edit profile</h5>

      <form id="edit-profile-form">
        <!-- Name -->
        <div class="form-floating mb-3">
          <input
            name="name"
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="name"
            :value="user.name"
            required
          />
          <label for="floatingInput">Name</label>
        </div>

        <!-- username -->
        <div class="form-floating mb-3">
          <input
            name="username"
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="name"
            :value="user.username"
            required
          />
          <label for="floatingInput">Username</label>
        </div>

        <!-- Email -->
        <div class="form-floating mb-3">
          <input
            name="email"
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="name"
            :value="user.email"
            required
          />
          <label for="floatingInput">Email</label>
        </div>

        <!-- Age -->
        <div class="form-floating mb-3">
          <input
            name="age"
            type="number"
            class="form-control"
            id="floatingInput"
            placeholder="name"
            :value="user.age"
            required
          />
          <label for="floatingInput">Age</label>
        </div>

        <!-- weight -->
        <div class="form-floating mb-3">
          <input
            name="weight"
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="weight"
            :value="user.weight"
            required
          />
          <label for="floatingInput">Weight</label>
        </div>

        <!-- Gender -->
        <div class="form-floating mb-3">
          <input
            name="gender"
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="name"
            :value="user.gender"
            required
          />
          <label for="floatingInput">Gender</label>
        </div>

        <!-- Bio -->
        <div class="form-floating mb-3">
          <textarea
            class="form-control"
            name="biography"
            placeholder="Tell something about yourself"
            id="floatingInput"
            style="height: 150px"
            >{{ user.biography }}</textarea
          >
          <label for="floatingInput">Biography</label>
        </div>

        <!-- go back -->
        <button
          @click="isEdit = false"
          type="button"
          class="btn btn-primary me-1"
        >
          Back
        </button>
        <!-- submit button -->
        <button type="button" class="btn btn-dark">Save changes</button>
      </form>
    </div>
  </div>
</div>

<script>
  Vue.createApp({
    data() {
      return {
        users: [],
        isEdit: false,
        user: [],
      };
    },
    async created() {
      const res = await fetch("/users.json");
      const data = await res.json();
      this.users = data;
    },
    methods: {
      handleEdit(id) {
        this.isEdit = true;
        const [filteredUser] = this.users.filter((user) => user.id == id);
        this.user = filteredUser;
      },
    },
  }).mount("#list-users");
</script>
