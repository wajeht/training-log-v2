<div
  class="tab-pane fade show card shadow-sm"
  id="list-change-password"
  role="tabpanel"
  aria-labelledby="list-home-list"
>
  <div class="card-body">
    <h5 class="card-title mb-3">Change password</h5>
    <form id="signupFormFromSinglePage" action="/signup" method="post">
      <!-- old password -->
      <div class="form-floating mb-3">
        <input
          name="oldPassword"
          type="password"
          class="form-control"
          id="floatingInput"
          placeholder="old password"
          required
        />
        <label for="floatingInput">Old password</label>
      </div>

      <!-- new password -->
      <div class="form-floating mb-3">
        <input
          name="newPassword"
          type="password"
          class="form-control"
          id="floatingInput"
          placeholder="new password"
          required
        />
        <label for="floatingInput">New password</label>
      </div>

      <!-- confirm new password  -->
      <div class="form-floating mb-3">
        <input
          name="confirmNewPassword"
          type="password"
          class="form-control"
          id="floatingInput"
          placeholder="confirm new password"
          required
        />
        <label for="floatinginput">Password</label>
      </div>

      <!-- user id -->
      <input type="hidden" id="userId" name="userId" value="<%= userDetails.id %>" />

      <!-- csrf token -->
      <input
        type="hidden"
        id="csrfToken"
        name="_csrf"
        value="<%= csrfToken %>"
      />

      <button
        id="public-info-save-changes"
        onclick="changePassword(this)"
        type="button"
        class="btn btn-dark"
      >
        Change password
      </button>
    </form>
  </div>
</div>
