{
  "name": "training-log",
  "version": "1.0.0",
  "description": "A full-stack web application to log training videos with the respect to weekly split!",
  "main": "bin/server.js",
  "scripts": {
    "test": "jest",
    "dev": "nodemon bin/server.js",
    "start": "node bin/server.js",
    "clean": "bash bin/clean-data.sh && npm run cleandb",
    "cleandb": "npm run rollback && npm run migrate:latest",
    "restartdb": "npm run rollback && npm run migrate:latest && npm run seed:run && npm run dev",
    "rollback": "knex migrate:rollback --knexfile=./db/knexfile.js",
    "migrate:make": "knex migrate:make --knexfile=./db/knexfile.js",
    "migrate:latest": "knex migrate:latest --knexfile=./db/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile=./db/knexfile.js",
    "seed:make": "knex seed:make --knexfile=./db/knexfile.js",
    "seed:run": "knex seed:run --knexfile=./db/knexfile.js"
  },
  "author": "wajeht",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-session-knex": "^2.1.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.17.2",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^4.6.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^0.1.2",
    "knex": "^0.95.14",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "nodemailer": "^6.7.0",
    "pg": "^8.7.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15"
  }
}
