{
  "name": "training-log",
  "version": "1.0.0",
  "description": "A full-stack web application to log training videos with the respect to weekly split!",
  "main": "bin/server.js",
  "scripts": {
    "test": "jest",
    "dev": "nodemon bin/server.js",
    "start": "npm run make-folders && npm run restartdb && node bin/server.js",
    "clean": "sh bin/clean-data.sh && npm run cleandb",
    "update": "sh bin/update.sh",
    "make-folders": "sh bin/make-folders.sh",
    "cleandb": "npm run rollback && npm run migrate:latest",
    "restartdb": "npm run clean && npm run dev",
    "rollback": "knex migrate:rollback --knexfile=./db/knexfile.js",
    "migrate:make": "knex migrate:make --knexfile=./db/knexfile.js",
    "migrate:latest": "knex migrate:latest --knexfile=./db/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile=./db/knexfile.js",
    "seed:make": "knex seed:make --knexfile=./db/knexfile.js",
    "seed:run": "knex seed:run --knexfile=./db/knexfile.js"
  },
  "author": "wajeht",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-session-knex": "^3.0.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.17.3",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^5.1.1",
    "knex": "^2.2.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.7.7",
    "pg": "^8.7.3",
    "socket.io": "^4.5.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "jest": "^28.1.3",
    "nodemon": "^2.0.19"
  }
}
